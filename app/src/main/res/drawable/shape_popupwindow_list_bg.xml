<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- This is the main color -->
    <item>
        <shape>
            <!-- 边框颜色 -->
            <solid android:color="@color/bluetheme" />
        </shape>
    </item>
    <!-- 给View的上 左  右设置8dp的边框 -->
    <item
        android:bottom="1dip"
        android:left="1dip"
        android:right="1dip"
        android:top="1dip">
        <shape>
            <!-- View填充颜色 -->
            <solid android:color="@color/white" />
        </shape>
    </item>

</layer-list>
